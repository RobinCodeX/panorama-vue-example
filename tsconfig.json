{
    "include": ["**/*.ts", "**/*.vue"],
    "compilerOptions": {
        "baseUrl": "./pages",
        "rootDir": ".",
        "noImplicitAny": true,
        "experimentalDecorators": true,
        "allowJs": true,
        "inlineSourceMap": true,
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "strict": true,
        "target": "ES2017",
        "lib": ["ES2017"]
    }
}
